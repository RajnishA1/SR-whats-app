<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profiledetail">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                tools:layout_editor_absoluteX="0dp"
                app:tint="@color/black"
                tools:layout_editor_absoluteY="16dp">

            </ImageView>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dots"
                app:tint="@color/black"
                android:layout_gravity="end"
                tools:layout_editor_absoluteY="16dp">

            </ImageView>
        </androidx.appcompat.widget.Toolbar>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:src="@drawable/rj"
        android:id="@+id/circleimageview"
        android:textAlignment="center">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="9266215962"
        android:layout_below="@+id/circleimageview"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/numbertext"
        android:textColor="@color/black">

    </TextView>
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manish Digital Studio "
        android:layout_below="@+id/numbertext"
        android:gravity="center"
        android:layout_marginTop="10dp"
          android:id="@+id/shopnametext"
        android:textColor="@color/black">

    </TextView>
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retail bank "
        android:layout_below="@+id/shopnametext"
        android:gravity="center"
        android:id="@+id/typetext"
        android:layout_marginTop="10dp"
        android:textColor="@color/black">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/typetext"
        android:id="@+id/callicon"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_call_24"
            android:layout_weight="1">

        </ImageView><ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_share_24"
            android:layout_weight="1">

        </ImageView>







    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a business account."
        android:layout_below="@id/callicon"
        >

    </TextView>

    






</RelativeLayout>